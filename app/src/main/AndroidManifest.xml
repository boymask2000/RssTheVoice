<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.rss0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".RssShowActivity"
            android:label="@string/view_feed" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".NewRssActivity"
            android:label="@string/new_feed" />

        <service
            android:name=".RssService"
            android:exported="false" />

        <activity
            android:name=".HotWordsHandlerActivity"
            android:label="@string/title_activity_hot_words_handler" />
        <activity
            android:name=".NewHotWordActivity"
            android:label="@string/title_activity_new_hot_word" >
        </activity>
    </application>

</manifest>
